<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_nh" />

    <EditText
        android:id="@+id/reset_phone"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/edit_texxt_bgr"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Number Phone"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <EditText
        android:id="@+id/reset_pass"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_texxt_bgr"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/reset_phone"
        app:layout_constraintStart_toStartOf="@+id/reset_phone"
        app:layout_constraintTop_toBottomOf="@+id/reset_phone" />

    <EditText
        android:id="@+id/reset_pass2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_texxt_bgr"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Confirm password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/reset_pass"
        app:layout_constraintStart_toStartOf="@+id/reset_pass"
        app:layout_constraintTop_toBottomOf="@+id/reset_pass" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@color/purple_500"
        android:text="Reset"
        android:textColor="#6D4C41"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/reset_pass2"
        app:layout_constraintStart_toStartOf="@+id/reset_pass2"
        app:layout_constraintTop_toBottomOf="@+id/reset_pass2" />

    <TextView
        android:id="@+id/reset_backTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/resetBtn"
        app:layout_constraintStart_toStartOf="@+id/resetBtn"
        app:layout_constraintTop_toBottomOf="@+id/resetBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>