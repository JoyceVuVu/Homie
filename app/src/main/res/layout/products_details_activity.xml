<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    tools:context=".Activity.ProductDetails">

    <ImageView
        android:id="@+id/proddetails_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/proddetails_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/proddetails_back"
        app:srcCompat="@drawable/message_circle" />

    <ImageView
        android:id="@+id/proddetails_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/prodPic"
        android:layout_width="408dp"
        android:layout_height="445dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_1_removebg_preview" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:background="@drawable/products_details_bgr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/montserrat"
            android:text="230000 Vnd"
            android:textColor="#BF9D7B"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_txt" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/montserrat"
            android:text="Arm Chair"
            android:textColor="#BF9D7B"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="377dp"
            android:layout_height="109dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/montserrat"
            android:text='Arm Chair có kích thước nhỏ, tuy nhiên cực kỳ chắc chắn
nhờ được làm từ khung gỗ thông kết hợp với chân gỗ cao su cứng cáp, chịu lực tốt,
bạn có thể hoàn toàn yên tâm khi ngồi lên đó.
Đây là giải pháp tuyệt vời để bạn có thể thay đổi không gian của mình trở nên mới mẻ hơn.
Kiểu dáng nhỏ nhắn, kết hợp cùng những gam màu pastel nhẹ nhàng dễ dàng nhận được nhiều sự chú ý.'
            android:textColor="#BF9D7B"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/title_txt"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Offers"
            android:textColor="#BF9D7B"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/review_txt"
            app:layout_constraintStart_toEndOf="@+id/review_txt"
            app:layout_constraintTop_toTopOf="@+id/review_txt" />

        <TextView
            android:id="@+id/review_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Review"
            android:textColor="#BF9D7B"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_now"
            android:fontFamily="@font/montserrat"
            android:padding="4dp"
            android:text="Description"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/title_txt"
            app:layout_constraintTop_toBottomOf="@+id/title_txt" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:srcCompat="@drawable/cart_btn_bgr" />

        <ImageView
            android:id="@+id/minusBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintStart_toStartOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:srcCompat="@drawable/minus_circle" />

        <ImageView
            android:id="@+id/plusBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintEnd_toEndOf="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/numOrder_txt"
            app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:srcCompat="@drawable/plus_circle" />

        <TextView
            android:id="@+id/numOrder_txt"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/minusBtn"
            app:layout_constraintTop_toTopOf="@+id/imageView12" />

        <Button
            android:id="@+id/addToCartbtn"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cart_btn_bgr"
            android:drawableEnd="@drawable/cart"
            android:fontFamily="@font/montserrat"
            android:paddingRight="16dp"
            android:text="Add to cart"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintEnd_toEndOf="@+id/price_txt"
            app:layout_constraintTop_toTopOf="@+id/imageView12" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>